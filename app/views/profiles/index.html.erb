<h1>Listing profiles</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Street address</th>
    <th>City</th>
    <th>Province</th>
    <th>Postal code</th>
    <th>Home telephone</th>
    <th>Work telephone</th>
    <th>Cell telephone</th>
    <th>Email public</th>
    <th>Email private</th>
    <th>Experience</th>
    <th>Training</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.first_name %></td>
    <td><%= profile.last_name %></td>
    <td><%= profile.street_address %></td>
    <td><%= profile.city %></td>
    <td><%= profile.province %></td>
    <td><%= profile.postal_code %></td>
    <td><%= profile.home_telephone %></td>
    <td><%= profile.work_telephone %></td>
    <td><%= profile.cell_telephone %></td>
    <td><%= profile.email_public %></td>
    <td><%= profile.email_private %></td>
    <td><%= profile.experience %></td>
    <td><%= profile.training %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

